<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="de.stevenschwenke.java.javafx.workLifeBalance.client.data.TimeRecordMapper">

	<insert id="insertTimeRecord" parameterType="TimeRecordInsertWrapper">
		insert into TIME_RECORDS (id, hours, day_record_id, aspect) values (NEXT VALUE FOR
		TIME_RECORDS_SEQ, #{hours}, #{dayRecordId}, #{aspect})
	</insert>

	<select id="selectTimeRecordOfDayRecord" parameterType="int" resultType="TimeRecordInsertWrapper">
		select * from Time_RECORDS where day_record_id = #{id}
	</select>
</mapper>