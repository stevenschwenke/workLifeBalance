<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="de.stevenschwenke.java.javafx.workLifeBalance.client.data.DayRecordMapper">

	<resultMap id="dayRecordList"
		type="DayRecord">
		<id property="id" column="id" />
		<result property="date" column="date" />
	</resultMap>

	<resultMap id="TimeRecord" type="TimeRecord" >
		<id property="id" column="id" />
		<result property="hours" column="hours" />
	</resultMap>

	<insert id="insertDayRecord" 
		parameterType="DayRecord">
		insert into DAY_RECORDS (id, date) values (NEXT VALUE FOR DAY_RECORDS_SEQ,#{date} )
	</insert>

	<select id="selectAllDayRecords" parameterType="int" resultMap="dayRecordList">
		select * from DAY_RECORDS
	</select>
</mapper>